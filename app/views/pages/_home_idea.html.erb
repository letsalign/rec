<div class="row">
	<div class="span12">
		<div><%= link_to home_idea.title, home_idea %></div>
		<div><%= home_idea.description %></div>
	</div>
</div>
<div class="span12">
<div class="row">
	<% if !home_idea.comments.blank? %>
		<% home_idea.comments.each do |c| %>
			<div class="span11"><i class="icon-comment"></i><%= c.body %> by <%= c.user.email %> on <%= c.created_at %></div>
		<% end %>
	<% end %>
</div>
<div>
	<%= render :partial => "comments/form", :locals => {:home_idea => home_idea} %>
</div>
</div>
