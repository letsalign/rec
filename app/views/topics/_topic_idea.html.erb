<div class="spanhalf">
	<a class="btn btn-info" href="#"><i class="icon-thumbs-up icon-white"></i></a>
	<div>#</div>
</div> 
<div class="span10">
	<div><%= topic_idea.title %></div>
	<div><%= topic_idea.body %></div>
</div>
<div class="span1">
	<%# home_topic.user_id %>
</div>
<div class="span12">
<div class="row">
	<div class="span10">
		<% if !topic_idea.comments.blank? %>
			<% topic_idea.comments.each do |c| %>
				<i class="icon-comment"></i><%= c.body %>
			<% end %>
		<% end %>
	</div>
</div>
<div>
	<%= render :partial => "comments/form", :locals => {:topic_idea => topic_idea} %>
</div>
</div>
